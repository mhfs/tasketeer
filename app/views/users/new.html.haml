- title "Sign Up"

- form_for @user, :html => { :multipart => true } do |f|
  = f.error_messages
  %p
    = f.label :name
  %p
    = f.text_field :name

  %p
    = f.label :email
  %p
    = f.text_field :email

  %p
    = f.label :password
  %p
    = f.password_field :password

  %p
    = f.label :password_confirmation
  %p
    = f.password_field :password_confirmation

  %p
    = f.submit "Save"