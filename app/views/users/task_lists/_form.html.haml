- form_for [@user, @task_list] do |f|
  = f.error_messages
  %p
    = f.label :title
  %p
    = f.text_field :title
  %p
    = f.check_box :private
    = f.label :private
    
  #tasks
    %h3 Add some tasks ..
    - f.fields_for :tasks do |task_form|
      = render :partial => 'task', :locals => { :form => task_form }
  = add_task_link(f)
  %p
    = f.submit "Save"